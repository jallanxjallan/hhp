alias cmrs='commit_documents stories reviewed' 
alias cmrsd='commit_documents stories reviewed --dry-run' 
alias cmpt='commit_documents stories prompt'
alias cmptd='commit_documents stories prompt --dry-run'
alias notedoclinks='check_content_links.py --notes_file stories.ctd --document_dir stories --index_file content_index.md --source notes_file --target document_dir'
alias imagelinks='check_content_links.py --notes_file images.ctd --document_dir images --index_file content_index.md'
alias safety='tar -czf safety.tar.gz *.ctd images stories'
alias queue_story_notes='queue_chats.py notes --notes_file stories.ctd --target_folder stories'
alias active_stories='check_content_links.py --notes_file stories.ctd --document_dir stories --index_file content_index.md - active_notes'
alias queue_chats='grep -l "status: 📝" ContentVault/Scenes/*.md | queue_chats.py markdown - compose backstory - edit unframe - writeback --job_id process_test'
alias load_results='redis-cli flushall; grep -l "status: 📝" ContentVault/Scenes/*.md | queue_chats.py markdown - compose backstory - edit unframe - writeback --job_id process_test; process_chats.py'
